{
  "name": "react-audio-recorder-hook",
  "version": "0.1.0",
  "description": "A powerful TypeScript-based React hook that provides complete audio recording capabilities with pause/resume functionality, recording management, and audio processing",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.modern.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./examples": {
      "import": "./dist/examples/index.modern.js",
      "require": "./dist/examples/index.js",
      "types": "./dist/examples/index.d.ts"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "ci": "npm run lint && npm run test && npm run build",
    "semantic-release": "semantic-release",
    "docs": "typedoc --out docs src/index.ts",
    "docs:serve": "serve docs"
  },
  "keywords": [
    "react",
    "hook",
    "audio",
    "recorder",
    "voice",
    "recording",
    "mediarecorder",
    "typescript"
  ],
  "author": "Miladbn <milad.b.n.77@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.33",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.1.0",
    "c8": "^8.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^12.10.3",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.2",
    "serve": "^14.2.1",
    "typedoc": "^0.25.12",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miladbn/react-audio-recorder-hook.git"
  },
  "bugs": {
    "url": "https://github.com/miladbn/react-audio-recorder-hook/issues"
  },
  "homepage": "https://github.com/miladbn/react-audio-recorder-hook#readme"
}
